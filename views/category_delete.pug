extends layout

block content
  h1 #{title}: #{category.name}

  if items.length

    p #[strong Delete the following items before attempting to delete this category.]
    br
    div
      h4 Items:
      ol
        each item in items
          li
            a(href=item.url class="item-link")!=` ${item.name}`
            |  (color: #{item.color}, size: #{item.size})

  else
    p Do you really want to delete this Category?

    form(method='POST' action='')
      div
        input(type='hidden',name='categoryid', required='true', value=category._id )

      button(type='submit') Delete
